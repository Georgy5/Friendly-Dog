<div class="container">
  <div>
    <p>Name: <%= @dog.name %></p>
    <p>Breed: <%= @dog.breed %></p>
    <p>Size: <%= @dog.size %></p>
    <p>City: <%= @dog.city %></p>
    <p>Character: <%= @dog.description %></p>
    <p>Possible use: <%= @dog.category %></p>
    <p>Hypoallergenic: <%= @dog.hypoallergenic ? "👍" : "👎" %></p>
  </div>
  <div class="btn-group">
		<%= link_to 'Book this dog', new_dog_booking_path(@dog), class: "btn btn-primary" %>
	</div>
</div>
