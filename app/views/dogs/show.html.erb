


<div class="container">
  <div class="card-dog">
      <%= link_to dog_path(@dog), id: "remove", method: :delete, data: { confirm: "are you sure? #{@dog.name} is pretty swell..." } do %>
        <i class="fas fa-times"></i>
      <% end %>
    <% if @dog.photo.attached? %>
      <%= cl_image_tag @dog.photo.key, height: 600, width: 500, crop: :fill %>
    <% else %>
      <img src="https://source.unsplash.com/1000x600/?dog" alt="">
    <% end %>

    <div class="card-dog-infos">
      <div>
        <h5>#<%= @dog.category %></h5>
        <h2><%= @dog.name %></h2>
        <p><i class="fas fa-map-marker"></i>  <%= @dog.city %></p>
        <p><i class="fas fa-dog"></i> <%= @dog.breed %></p>
        <p><i class="fas fa-weight"></i> <%= @dog.size %></p>
        <p>Hypoallergenic: <%= @dog.hypoallergenic ? "👍" : "👎" %></p>
        <p>Description</p>
        <p><%= @dog.description %></p>
      </div>
      <div>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-dog-user avatar-bordered" />
        <p>Owned by <span><%= @dog.user.first_name %> <%= @dog.user.last_name %></span></p>
        <h2 class="card-dog-pricing">99,99€ per day </h2>
        <%= link_to "Rent #{@dog.name}", new_dog_booking_path(@dog), class: "btn btn-primary"%>
      </div>
    </div>

  </div>
</div>

<div class="container pb-4">
  <%= link_to 'Back to all dogs', url_for(:back), class: "btn btn-primary btn-sm" %>
  <%= link_to 'Retire this dog', dog_path(@dog.id), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "are you sure? #{@dog.name} is pretty swell..." } %>
</div> 









