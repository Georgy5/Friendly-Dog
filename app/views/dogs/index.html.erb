<div class="banner-img ban-index">
  <div class="container">
    <h1>These dogs have skills</h1>
    <p>which one will help you?</p>
  </div>
</div>

<div class="flexit container">
  <div class="grid">
    <% @dogs.reverse.each do |dog| %>
      <% if dog.photo.attached? %>
        <%= link_to dog_path(dog.id) do %>
          <div class="card">
            <div class="img-card">
              <%= cl_image_tag dog.photo.key, crop: :fill %>
            </div>
            <div class="basic-info">
              <h3><%= dog.name %></h3>
              <p><%= dog.category %></p>
            </div>
            <p class="right"><%= dog.city %>, DE</p>
          </div>
        <% end %>
      <% else %>
        <%= link_to dog_path(dog.id) do %>
          <div class="card">
            <div class="img-card">
              <img src="https://source.unsplash.com/500x400/?dog" alt="">
            </div>
            <div class="basic-info">
              <h3><%= dog.name %></h3>
              <p><%= dog.category %></p>
            </div>
            <p class="right"><%= dog.city %>, DE</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
