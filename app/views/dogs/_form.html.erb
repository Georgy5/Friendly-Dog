<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true %>
    <%= f.input :breed,
                required: true %>
    <%= f.input :size, collection: ['small', 'med-small', 'medium', 'med-large', 'large'] %>
    <%= f.input :category, collection: Dog::CATEGORIES %>
    <%= f.input :description %>
    <%= f.input :hypoallergenic, as: :boolean %>
    <%= f.input :city, required: true %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
